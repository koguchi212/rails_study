<div class="container">
  <h1 class="mt-3 text-center">ログイン</h1>

  <%= form_with(scope: :session, local: true) do |f| %>
    <div class="row justify-content-center">
      <div class="col-lg-6">
        <div class="form-group mb-3">
          <%= f.label :email, 'メールアドレス', class: 'form-label background-color' %>
          <%= f.text_area :email, class: 'form-control', id: 'session_email'%>
        </div>
      </div>
    </div>

    <div class="row justify-content-center">
      <div class="col-lg-6">
        <div class="form-group mb-3">
          <%= f.label :password, 'パスワード', class: 'form-label background-color' %>
          <%= f.password_field :password, class: 'form-control', id: 'session_password'%>
          <%= f.submit "ログインする", class: 'mt-3 btn btn-primary' %>
        </div>
      </div>
    </div>
  <% end %>
</div>
