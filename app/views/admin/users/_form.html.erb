<div class="container">
  <h3 class="mt-3 text-center">ユーザー登録</h3>

  <%= form_with(model: [:admin, @user], local: true) do |f| %>
    <div class="row justify-content-center">
      <div class="col-lg-6">
        <div class="form-group mb-3">
          <%= f.label :name, '名前', class: 'form-label background-color' %>
          <%= f.text_field :name, class: 'form-control', readonly: action == 'show' %>
        </div>

        <div class="form-group mb-3">
          <%= f.label :email, 'メールアドレス', class: 'form-label background-color' %>
          <%= f.text_area :email, class: 'form-control', readonly: action == 'show' %>
        </div>

        <div class="form-group mb-3">
          <%= f.label :admin, class: 'form-check-label' do %>
            <%= f.check_box :admin, class: 'form-check-input', readonly: action == 'show' %>
            管理者権限
          <% end %>
        </div>

        <div class="form-group mb-3">
          <%= f.label :password, 'パスワード', class: 'form-label background-color' %>
          <%= f.password_field :password, class: 'form-control', readonly: action == 'show' %>
        </div>

        <div class="form-group mb-3">
          <%= f.label :password_confirmation, 'パスワード(確認)', class: 'form-label background-color' %>
          <%= f.password_field :password_confirmation, class: 'form-control', readonly: action == 'show' %>
        </div>

        <div class="form-group mb-3 text-center">
          <% if action == 'show' %>
            <%= link_to '編集', edit_admin_user_path(@user.id), class: 'btn btn-primary' %>
          <% else %>
            <%= f.submit "#{ @user.new_record? ? '登録する' : '更新' }", class: 'mt-3 btn btn-primary' %>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>
